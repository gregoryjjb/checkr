
= form_for @user do |f|
  %div.field
    %label.label Username
    %div.control
      = f.text_field :name, :class => "input"
  
  %div.field
    %label.label Email
    %div.control
      = f.email_field :email, { class: 'input' }

  %div.field
    %label.label Password
    %div.control
      = f.password_field :password, :class => "input"
  
  %div.field
    %label.label Confirm Password
    %div.control
      = f.password_field :password_confirmation, :class => "input"

  %div.field
    %div.control
      = f.submit "Create Account", :class => "button is-primary"

  %div.field
    %div.control
      = link_to "Have an account? Sign in", login_path