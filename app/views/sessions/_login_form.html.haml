= form_for :session do |f|
  %div.field
    %label.label Username
    %div.control
      = f.text_field :name, :class => "input"
    
    %div.field
      %label.label Password
      %div.control
        = f.password_field :password, :class => "input"

  %div.field
    %div.control
      = f.submit "Sign In", :class => "button is-primary"
      
  %div.field
    %div.control
      = link_to "Don't have an account? Create one", signup_path