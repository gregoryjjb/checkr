%section.hero
  %div.hero-body
    %div.container
      %h1.title Check Files
      %h2.subtitle Upload a file to check if it's dangerous

%section.section
  %div.container
    %div.left-form
      = form_for :test_file do |f|
        %div.field
          %label.label File
          = f.file_field :file, { class: 'input' }
        
        %div.field
          = f.submit 'Submit', { class: 'button is-primary' }
        